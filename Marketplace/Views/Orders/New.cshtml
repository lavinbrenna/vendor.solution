@{
  Layout = "_Layout";
}
<h1>Add a new order to @Model.Name</h1>
<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <label for="orderTitle">Order Title</label><br>
  <input id="orderTitle" name="orderTitle" type="text"><br>
  <label for="orderDescription">Order Description</label><br>
  <input id="orderDescription" name="orderDescription" type="text"><br>
  <label for="orderPrice">Order Price</label><br>
  <input id="orderPrice" name="orderPrice" type="number"><br>
  <label for="orderDate">Order Date</label><br>
  <input id="orderDate" name="orderDate" type="date"><br>
  <button type="submit">Add Order</button>
</form>